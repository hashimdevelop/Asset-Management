<%= form_tag(mobiledevices_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <%= submit_tag "search", :name => nil, class: "btn btn-danger" %>
    </div>
  <% end %>
  
  <%= will_paginate %>
<div class="newbtn">
<%= link_to "NEW Mobile", new_mobiledevice_path, class: "btn btn-success" %> <br></br>
</div>

<table id="t01">
  <tr>
    <th>Name</th>
    <th>Model</th>
    <th>Serial No</th>
    <th>Asset Tag</th>
    <th>Date Of Purchase</th>
    <th>Warranty</th>
    <th>OS</th>
    <th>Used By</th>
    <th>Modify</th>
    <th>Delete</th>
  </tr>
  <% @mobiledevices.each do |list| %>
    <tr>
     <td><%= link_to list.device_name, mobiledevice_path(list) %></td>
       <td><%= list.model %></td>
       <td><%= list.serial_no %></td>
       <td><%= list.asset_tag %></td>
       <td><%= list.date_of_purchase %></td>
       <td><%= list.warranty %></td>
       <td><%= list.os %></td>
       <td><%= list.used_by %></td>
       <td><%= link_to "Edit", edit_mobiledevice_path(list) %></td>
       <td><%= button_to "Delete", {:controller => "mobiledevices", :action => 'destroy', :id => list.id}, :confirm => "Are you sure you want to delete", :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>